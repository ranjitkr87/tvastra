<html>
    <head>
        <title>Tvastra.com</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="stylesheet" href="../css/reset.css">
        <link rel="stylesheet" href="../css/themes.css">
        <link rel="stylesheet" href="../css/login.css">               
        <link rel="stylesheet" href="../css/common.css">     
        <link rel="apple-touch-icon" sizes="180x180" href="../fav/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="../fav/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="../fav/favicon-16x16.png">
        <link rel="manifest" href="../fav/site.webmanifest">  
    </head>
    <body>
        <%- include ('partials/header.ejs') %>

        <section class="container">
            <div class="loginBox">
                <div class="loginBoxhead">
                    <h4>Enter Your Registered Number</h4>
                </div>
                <form action="/otpForPasswordReset" method="post">
                    <div class="inputContainer">
                        <div class="emailInput">
                            <input type="tel" name="number" placeholder="Enter Mobile Number">
                        </div>
                        <div class="loginWithPassword">
                            <a href="login">Login with password</a>
                        </div>
                        <div class="loginButton">
                            <button class="primary" type="submit">GET OTP</button>
                            <i class="fas fa-arrow-right"></i>      
                        </div>
                </form>
                </div>
                <div class="redirect">
                    <p >Not Registered?<a href="signup">&nbsp;Sign Up</a> </p>
                </div>
            </div>
            <div class="foot-rights">
                <p class="copyright">All Rights Reserved &copy; Tvastra 2020</p>
            </div>
        </section>
    </body>
</html>